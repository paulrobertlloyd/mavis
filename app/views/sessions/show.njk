{% extends "_layouts/default.njk" %}

{% set title = session.location.name %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [{
      text: "Home",
      href: "/dashboard"
    }, {
      text: __("campaign.list.title"),
      href: "/campaigns"
    }, {
      text: data.campaigns[session.campaign_uuid].name,
      href: "/campaigns/" + session.campaign_uuid
    }]
  }) }}
{% endblock %}

{% block content %}
  {{ super() }}

  {{ heading({
    classes: "nhsuk-u-margin-bottom-2",
    title: title
  }) }}

  <p class="nhsuk-caption-l nhsuk-u-margin-bottom-4">{{ session.formattedDate }} ({{ session.time }}) Â· {{ __n("session.cohort.count", patients.length) }}</p>

  <p class="nhsuk-body nhsuk-u-margin-bottom-7">
    {{ tag({
      classes: "nhsuk-tag--blue nhsuk-u-margin-right-3",
      text: session.status
    }) if session.status == SessionStatus.Active else link(
      session.uri + "/edit",
      __("session.edit.title")
    ) | safe }}
  </p>

  {% set consentCardDescriptionHtml %}
    <p>
      {{ __n("consent.NoResponse.count", patients | where("consent", ConsentOutcome.NoResponse) | length) }}<br>
      {{ __n("consent.Given.count", patients | where("consent", ConsentOutcome.Given) | length) }}<br>
      {{ __n("consent.Refused.count", patients | where("consent", ConsentOutcome.Refused) | length) }}<br>
      {{ __n("consent.Inconsistent.count", patients | where("consent", ConsentOutcome.Inconsistent) | length) }}
    </p>
  {% endset %}

  <ul class="nhsuk-grid-row nhsuk-card-group">
    <li class="nhsuk-grid-column-one-half nhsuk-card-group__item">
      {{ card({
        clickable: true,
        heading: __("session.activity.consent.title"),
        headingClasses: "nhsuk-heading-m",
        href:  session.uri + "/consent",
        descriptionHtml: consentCardDescriptionHtml
      }) }}
    </li>
  </ul>
{% endblock %}
